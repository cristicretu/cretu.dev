---
import Layout from '@/layouts/Layout.astro';
import { works } from '@/data/work';
---

<Layout title="work" description="stuff i built.">
  <div class="flex flex-col gap-8 px-8">
    <div class="flex flex-col gap-2 max-w-2xl mx-auto w-full">
      <h1 class="text-primary">work</h1>
      <p class="text-tertiary">
        things i shipped. hover for credits.
      </p>
    </div>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3 max-w-6xl mx-auto w-full">
      {works.map((work) => {
        const height = work.h || 'h-48';
        return (
          <div class="group relative overflow-hidden rounded-lg bg-gray-100 dark:bg-gray-800">
            <div class:list={['relative', height]}>
              <img
                alt={work.title}
                class="absolute inset-0 h-full w-full object-cover transition-all duration-300 group-hover:scale-105 group-hover:blur-sm"
                src={work.img}
                loading="lazy"
              />
              <div class="absolute inset-0 bg-black/40 opacity-0 transition-opacity duration-300 group-hover:opacity-100" />
            </div>

            <div class="absolute bottom-0 left-0 right-0 p-3 text-white">
              <div class="flex items-baseline justify-between">
                <span class="text-sm font-medium">{work.title}</span>
                <span class="text-xs font-mono opacity-60">{work.description}</span>
              </div>
            </div>

            <div class="absolute inset-0 flex flex-col items-center justify-center p-4 text-white opacity-0 transition-opacity duration-300 group-hover:opacity-100">
              <span class="font-medium">{work.title}</span>
              <span class="text-sm opacity-80">{work.description}</span>
              {work.company && <span class="text-xs opacity-60 mt-1">@{work.company}</span>}
              
              {work.authors && work.authors.length > 0 && (
                <div class="mt-3 text-xs opacity-60 text-center">
                  {work.authors.map((author) => (
                    <span class="block">{author}</span>
                  ))}
                </div>
              )}
            </div>
          </div>
        );
      })}
    </div>
  </div>
</Layout>
