{
  "name": "cretu.dev",
  "version": "2.0.0",
  "type": "commonjs",
  "author": {
    "email": "crisemcr@gmail.com",
    "name": "Cristian CreÈ›u",
    "url": "https://cretu.dev"
  },
  "homepage": "https://cretu.dev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cristicretu/cretu.dev/issues"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "format": "prettier --write \"./**/*.{ts,js,tsx,jsx}\"",
    "lint": "npx eslint . --ext .ts,.tsx",
    "lint:fix": "npx eslint . --ext .ts,.tsx --fix",
    "check-format": "prettier --list-different \"./**/*.{ts,js,tsx,jsx}\"",
    "prepare": "husky install",
    "postinstall": "yarn husky install && yarn build",
    "pre-commit": "yarn lint:fix",
    "pre-push": "yarn check-format"
  },
  "prettier": {
    "singleQuote": true,
    "jsxSingleQuote": true,
    "tabWidth": 2,
    "printWidth": 80,
    "useTabs": false,
    "semi": false,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "avoid"
  },
  "eslintConfig": {
    "extends": [
      "next",
      "eslint:recommended",
      "next/core-web-vitals",
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "ignorePatterns": [
      "postcss.config.js",
      "tailwind.config.js"
    ],
    "rules": {
      "import/order": [
        "error",
        {
          "groups": [
            "builtin",
            "external",
            "internal"
          ],
          "pathGroups": [
            {
              "pattern": "react",
              "group": "external",
              "position": "before"
            }
          ],
          "pathGroupsExcludedImportTypes": [
            "react"
          ],
          "newlines-between": "always",
          "alphabetize": {
            "order": "asc",
            "caseInsensitive": true
          }
        }
      ],
      "no-unused-vars": "off",
      "no-console": "warn",
      "@typescript-eslint/explicit-module-boundary-types": "off"
    },
    "globals": {
      "React": true,
      "JSX": true
    }
  },
  "dependencies": {
    "@headlessui/react": "^1.5.0",
    "@prisma/client": "3.13.0",
    "@radix-ui/react-dialog": "^0.1.7",
    "@radix-ui/react-dropdown-menu": "^0.1.6",
    "@radix-ui/react-icons": "^1.1.0",
    "@radix-ui/react-toggle-group": "^0.1.5",
    "@radix-ui/react-tooltip": "^0.1.7",
    "@supabase/supabase-auth-helpers": "^1.3.0",
    "@supabase/supabase-js": "^1.34.1",
    "@tailwindcss/typography": "^0.5.2",
    "date-fns": "^2.28.0",
    "esbuild": "^0.14.38",
    "eslint-config-prettier": "^8.5.0",
    "gray-matter": "^4.0.3",
    "mdx-bundler": "^9.0.0",
    "mdx-prism": "^0.3.4",
    "next": "latest",
    "next-mdx-remote": "^4.0.3",
    "next-themes": "^0.1.1",
    "node-fetch": "^3.2.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "reading-time": "^1.5.0",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-code-titles": "^1.0.3",
    "rehype-prism-plus": "^1.3.2",
    "rehype-slug": "^5.0.1",
    "remark-gfm": "^3.0.1",
    "remark-slug": "^7.0.1",
    "swr": "^1.3.0",
    "sharp": "^0.30.4",
    "swr": "^1.3.0",
    "tailwindcss-radix": "^2.2.0"
  },
  "devDependencies": {
    "@tailwindcss/line-clamp": "^0.4.0",
    "@types/node": "^17.0.26",
    "@types/react": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.20.0",
    "autoprefixer": "^10.4.6",
    "eslint": "^8.14.0",
    "eslint-config-next": "^12.1.5",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-md": "^1.0.19",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "husky": "^7.0.0",
    "postcss": "^8.4.12",
    "prettier": "^2.6.2",
    "prisma": "^3.12.0",
    "tailwindcss": "^3.0.24",
    "prisma": "^3.12.0",
    "typescript": "^4.6.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "keywords": [
    "tailwindcss",
    "template",
    "radix",
    "react",
    "nextjs",
    "portfolio",
    "personal-site"
  ]
}
